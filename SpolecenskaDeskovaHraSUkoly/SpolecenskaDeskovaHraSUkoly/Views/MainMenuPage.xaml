<Page x:Class="SpolecenskaDeskovaHraSUkoly.Views.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpolecenskaDeskovaHraSUkoly.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Společenská desková hra s úkoly" FontSize="32" FontWeight="Bold" Margin="0,0,0,20" />
        <Button Content="Nová hra" Width="200" Height="50" Click="StartGame_Click" />
        <Button Content="Načíst rozehranou hru" Width="200" Height="50" Margin="0,10,0,0" Click="OpenGame_Click" />
        <Button Content="Konec" Width="200" Height="50" Margin="0,10,0,0" Click="Exit_Click" />
    </StackPanel>
</Page>
